<div class="container w-25 bg-light">
  <h2 class="mt-3 pt-2"><%= t(:login) %></h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: t(:email),
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: t(:password),
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: t(:remember_me), as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, t(:login), class: "btn btn-outline-dark py-1 mb-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  <br>
</div>

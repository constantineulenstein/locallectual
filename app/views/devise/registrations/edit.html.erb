
<div class="container">
  <h2 class="my-3">Update your profile</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

      <div class="form-row">
        <div class="col-sm-9">
          <div class="form-inputs bg-light p-3">
            <%= f.input :first_name, input_html: {value: current_user.first_name} %>
            <%= f.input :last_name, input_html: {value: current_user.last_name} %>
            <%= f.input :age, input_html: {value: current_user.age} %>
            <%= f.input :job, input_html: {value: current_user.job} %>
            <%= f.input :gender, input_html: {value: current_user.gender} %>
            <%= f.input :base_location, label: "Where do you consider yourself to be a locallectual?", input_html: {value: current_user.base_location} %>
            <%= f.input :years_in_city, label: "How long have you been in this city for?", input_html: {value: current_user.years_in_city} %>
            <%= f.input :explorer_location, label: "Where do you seek to get to know locals?", input_html: {value: current_user.explorer_location} %>
            <%= f.input :photo, label: "Please upload a photo of you", input_html: {value: @user.photo} %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-inputs bg-light p-3">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
        </div>
      </div>
      <div class="form-actions mt-3">
        <%= f.button :submit, "Update", class: "btn btn-outline-dark" %>
      </div>
  <% end %>
  <br>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
  <br>
</div>



<!-- CODE FOR THE BANNER -->
<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/1000445/pexels-photo-1000445.jpeg?cs=srgb&dl=adult-backlit-beach-1000445.jpg&fm=jpg);">
  <div class="home-banner-container">
    <h1>Locallectual</h1>
    <p>Discover, Host, Repeat!</p>
    <div class="search-form-control form-group mt-5 banner-search">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for a place..."/>
        <button name="button" type="Search" class="btn btn-flat btn-primary">
          <i class="fas fa-search"></i>
        </button>
      </div>
  </div>
</div>

<div class="how-it-works">
  <h2>Meet the locallects around the world</h2>
</div>


<!-- CONTAINER FOR THE CARDS -->
<div class="primary-explain-container">
  <% @users.first(5).each do |user| %>
    <div class="card-explain">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-explain-infos">
        <h2><%= user.first_name %></h2>
        <p><%= user.base_location %></p>
      </div>
    </div>
  <% end %>
</div>




<div class="pl-5">
  <%= simple_form_for :search, url: forums_path, method: :get do |f| %>
    <div class="search-form-control form-group mt-5">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for content..."/>
      <button name="button" type="Search" class="btn p-0" id="home-button">
        <i class="fas fa-search"></i>
      </button>
    </div>
  <% end %>
</div>

<div class="px-5 d-flex">
  <div class="posts col-sm-9">
    <% @forums.each do |forum| %>
    <div class="post border-bottom">
      <h2 class="mt-3"><%= link_to forum.title, forum_path(forum.id) %></h2>
      <p><%= forum.description %></p>
      <p><em>Published by: <%= User.find(forum.user_id).first_name %>  <%= User.find(forum.user_id).last_name %>- <%= forum.created_at.strftime("%A, %d %b %Y %l:%M %p") %> - Comments (<%= forum.comments.count %>)</em></p>
    </div>
    <% end %>
  </div>
  <div class="filter col-sm-3">
      <%= simple_form_for :search, url: forums_path, method: "GET" do |f| %>
        <div class="form-inputs bg-light p-3">
          <%= f.input :location %>
          <%= f.input :language_list, collection: @languages, input_html: {class: "select2",  multiple: "multiple"} %>
          <%= f.button :submit, "Search", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
</div>

